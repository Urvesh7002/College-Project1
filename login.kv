#:kivy 2.1.0

ScreenManager:
    LoginScreen:
    LocationCheckScreen:

<LoginScreen@MDScreen>:
    name: "login"

    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20dp"
        padding: "50dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: 0.8, None
        height: "400dp"

        MDLabel:
            text: "Login"
            halign: "center"
            font_style: "H4"

        MDTextField:
            id: username
            hint_text: "Username"
            icon_right: "account"
            mode: "fill"                   # ✅ Makes the design look cleaner
            text: ""                       # ✅ Prevents the bug
            helper_text: ""                # ✅ No extra label
            helper_text_mode: "persistent"


        MDTextField:
            id: password
            hint_text: "Password"
            icon_right: "lock"
            password: True
            mode: "fill"
            text: ""
            helper_text: ""
            helper_text_mode: "persistent"
            

        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": 0.5}
            on_release: root.check_login()

<LocationCheckScreen@MDScreen>:
    name: "location"

    MDBoxLayout:
        orientation: 'vertical'
        padding: "50dp"
        spacing: "20dp"

        MDLabel:
            text: "Location Check Screen"
            halign: "center"
            font_style: "H5"


